##############################################
# Environment example for v4-kineticflow
# Copy this file to `.env` and fill in values.
##############################################

########################
# RPC / Network
########################


# Optional: RPC 
RPC_URL=https://sepolia.base.org

# Optional: Ethereum mainnet RPC (for Chainlink mainnet feed, etc.)
# ETH_MAINNET_RPC_URL=https://eth.llamarpc.com

########################
# Private Keys
########################

# private key
PRIVATE_KEY=

# private key for swap bot
BOT_PRIVATE_KEY=


# private key for controller
MPPI_PRIVATE_KEY=

########################
# External Price Source
########################

# Provider: binance (default) | chainlink
PRICE_PROVIDER=binance

# Binance trading pair (used when PRICE_PROVIDER=binance)
PRICE_SYMBOL=ETHUSDT

# entrypoint.sh switch: real (default) | mock
#   real  → market_monitor fetches live price from Binance (Base Sepolia / mainnet)
#   mock  → price_simulator writes to MockV3Aggregator   (local Anvil only)
PRICE_SOURCE=real

# Chainlink AggregatorV3 feed address (used when PRICE_PROVIDER=chainlink)
# Leave blank to auto-resolve from chain ID:
#   Base mainnet  (8453):  0x71041dddad3595F9CEd3DcCFBe3D1F4b0a16Bb70
#   Base Sepolia (84532):  0x4aDC67696bA383F43DD60A9e78F2C97Fbbfc7cb1
#   Ethereum main   (1):   0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419
# CHAINLINK_FEED_ADDRESS=

########################
# Dashboard
########################

########################
# Arbitrage Bot
########################

# Enable infinite token mint for arb bot on local Anvil
# ONLY for local testing – must be 0/false on testnet or mainnet
ARB_INFINITE_BALANCE=1

########################
# MPPI Controller
########################

# Max liquidity per MPPI rebalance (in "1e18" units, e.g. 2000 => 2000e18)
MPPI_MAX_LIQUIDITY_E18=2000