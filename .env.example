##############################################
# Environment example for v4-kineticflow
# Copy this file to `.env` and fill in values.
##############################################

########################
# RPC / Network
########################

# Local Anvil RPC (used for current simulations)
ANVIL_RPC_URL=http://127.0.0.1:8545

# Optional: Base Sepolia RPC (for future deployment)
# BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

########################
# Private Keys
########################

# Shared default key (Anvil account[0]) – DO NOT USE ON MAINNET
BOT_PRIVATE_KEY=0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d

# Arbitrage bot key（任意のAnvilアカウント / テスト用アカウント）
ARB_PRIVATE_KEY=${BOT_PRIVATE_KEY}

# MPPI bot key（任意のAnvilアカウント / テスト用アカウント）
MPPI_PRIVATE_KEY=${BOT_PRIVATE_KEY}

########################
# Dashboard / Simulator
########################

# Use live oracle price in app.py when available
USE_LIVE_PRICE_IN_UI=true

########################
# Arbitrage Bot
########################

# Enable infinite token mint for arb bot on local Anvil
# ONLY for local testing – must be 0/false on testnet or mainnet
ARB_INFINITE_BALANCE=1

########################
# MPPI Controller
########################

# Max liquidity per MPPI rebalance (in "1e18" units, e.g. 2000 => 2000e18)
MPPI_MAX_LIQUIDITY_E18=2000