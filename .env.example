##############################################
# Environment example for v4-kineticflow
# Copy this file to `.env` and fill in values.
##############################################

########################
# RPC / Network
########################


# Optional: RPC 
RPC_URL=https://sepolia.base.org

# Optional: Ethereum mainnet RPC (for ENS name resolution in dashboard)
# ENS registry is on mainnet; set this to show .eth names next to contract addresses.
# ETH_MAINNET_RPC_URL=https://eth.llamarpc.com

########################
# Private Keys
########################

# private key
PRIVATE_KEY=

# private key for swap bot
BOT_PRIVATE_KEY=


# private key for controller
MPPI_PRIVATE_KEY=

########################
# Dashboard / Simulator
########################

# Use live oracle price in app.py when available
USE_LIVE_PRICE_IN_UI=true

########################
# Arbitrage Bot
########################

# Enable infinite token mint for arb bot on local Anvil
# ONLY for local testing â€“ must be 0/false on testnet or mainnet
ARB_INFINITE_BALANCE=1

########################
# MPPI Controller
########################

# Max liquidity per MPPI rebalance (in "1e18" units, e.g. 2000 => 2000e18)
MPPI_MAX_LIQUIDITY_E18=2000